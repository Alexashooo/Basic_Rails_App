<h1>All Posts</h1>
<% @posts.each_with_index do |post,index| %>

  <div class="media">
    <div class="media-body">
      <h4 class="media-heading">
        <% if (index+1)%5==0 && index!=0 %>
        <% post.title = "CENSORED" %>
        <% end %>
        <%= link_to post.title, post %>
      </h4>
    </div>
  </div>
<% end %>
