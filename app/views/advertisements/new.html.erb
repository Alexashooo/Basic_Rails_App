<h6>For administrators</h6>
<h1>Make a new Advertisement</h1>

 <div class="row">



   <div class="col-md-8">
     <%= form_for @advertisement do |f| %>

       <div class="form-group">
         <%= f.label :title %>
         <%= f.text_field :title, class: 'form-control', placeholder: "Enter advertisements title" %>
       </div>

       <div class="form-group">
         <%= f.label :copy %>
         <%= f.text_field :copy, class: 'form-control', placeholder: "Enter a link" %>
      </div>


       <div class="form-group">
         <%= f.label :price %>
         <%= f.text_field :price, class: 'form-control', placeholder: "Enter a price" %>
      </div>


        <div class="form-group">
         <%= f.submit "Save", class: 'btn btn-success' %>
       </div>

     <% end %>
   </div>
 </div>
